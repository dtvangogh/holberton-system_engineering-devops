#!/usr/bin/env bash
# installing haproxy on a new server
sudo apt-get -y install software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-1.8
sudo apt-get -y update
sudo apt-get -y install haproxy=1.8.\*

# setup the config file
conf="listen www
#--
#Frontend
#--
#frontend main
bind :80
#option http-server-close
#option forwardfor
#default_backend app-main
#--
#Backend
#--
#backend app-main
balance roundrobin
server 1661-web-01 54.235.58.144:80 check
server 1661-web-02 34.73.211.9:80 check"
sudo echo "$conf" | tee -a /etc/haproxy/haproxy.cfg 
sudo echo "ENABLED=1" | tee -a /etc/default/haproxy

sudo service haproxy restart
